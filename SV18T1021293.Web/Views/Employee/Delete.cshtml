
@{
    ViewBag.Title = "Xóa nhân viên";
}


<div class="box box-primary">
    <div class="box-header with-border">
    </div>
    <div class="box-body">
        <div class="container bootstrap snippets bootdey">
            <hr>
            <form class="form-horizontal" action="#" method="post" enctype="multipart/form-data">
                <div class="row">
                    <!-- left column -->
                    <div class="col-md-3 text-center" >
                           <img src="https://bootdey.com/img/Content/avatar/avatar7.png" class="avatar img-circle img-thumbnail" alt="avatar">
                           @*<input type="file" class="form-control" name="Photo" id="Photo">*@
                    </div>

                    <!--form column -->
                    <div class="col-md-9 personal-info">
                        <div class="form-group">
                            <label class="col-lg-3 control-label">Họ:</label>
                            <div class="col-lg-8">
                                <p class="form-control-static">Andrew</p>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-3 control-label">Tên:</label>
                            <div class="col-lg-8">
                                <p class="form-control-static">Fuller</p>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-3 control-label">Ngày sinh:</label>
                            <div class="col-lg-8">
                                <p class="form-control-static">1952-02-19</p>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-3 control-label">Email:</label>
                            <div class="col-lg-8">
                                <p class="form-control-static">andrew.fuller@liteshop.com</p>
                            </div>
                        </div>
