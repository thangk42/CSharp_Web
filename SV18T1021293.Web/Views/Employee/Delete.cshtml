@model SV18T1021293.DomainModel.Employee
@{
    ViewBag.Title = "Xóa nhân viên";
}


<div class="box box-primary">
    <div class="box-header with-border">
    </div>
    <div class="box-body">
        <div class="container bootstrap snippets bootdey">
            <hr>
            <form class="form-horizontal" action="~/employee/delete/@Model.EmployeeID" method="post" enctype="multipart/form-data">
                <div class="row">
                    <!-- left column -->
                    <div class="col-md-3 text-center" >
                        @if (String.IsNullOrEmpty(Model.Photo))
                            {
                            <img src="https://randomuser.me/api/portraits/men/3.jpg" class="avatar img-circle img-thumbnail" alt="avatar" />
                            }
                         else {
                               <img src="@Model.Photo" class="avatar img-circle img-thumbnail" alt="avatar" />
                              }
                           @*<input type="file" class="form-control" name="Photo" id="Photo">*@
                    </div>

                    <!--form column -->
                    <div class="col-md-9 personal-info">
                        <div class="form-group">
                            <label class="col-lg-3 control-label">Họ:</label>
                            <div class="col-lg-8">
                                <p class="form-control-static">@Model.FirstName</p>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-3 control-label">Tên:</label>
                            <div class="col-lg-8">
                                <p class="form-control-static">@Model.LastName</p>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-3 control-label">Ngày sinh:</label>
                            <div class="col-lg-8">
                                <p class="form-control-static">@Model.BirthDate.ToString("d")</p>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-3 control-label">Email:</label>
                            <div class="col-lg-8">
                                <p class="form-control-static">@Model.Email</p>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-3 control-label">Ghi Chú:</label>
                            <div class="col-lg-8">
                                <p class="form-control-static">@Model.Note</p>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-offset-3 col-sm-10">
                                @if (SV18T1021293.BusinessLayer.CommonDataService.InUsedEmployee(Model.EmployeeID))
                                {
                                    <p class="text-danger">Không được xóa nhân viên này</p>
                                }
                                else
                                {
                                    <button type="submit" class="btn btn-danger">
                                        <i class="fa fa-save"></i> Xóa dữ liệu
                                    </button>
                                }
                                <a href="~/employee" class="btn btn-default">
                                    <i class="fa fa-ban"> Quay lại</i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <div class="box-footer">

    </div>
</div>

<hr>

