@model SV18T1021293.Web.Models.EmployeePaginationResult
@{
    Layout = null;
}


<p style="margin: 5px">
    Có <strong>@Model.RowCount</strong> nhân viên trong tổng số <strong>@Model.PageCount</strong> trang
</p>

<div class="table-responsive">
    <table class="table table-bordered table-hover table-striped" style="table-layout:inherit">
        <thead>
            <tr class="bg-primary">
                <th></th>
                <th>Email</th>
                <th>Họ</th>
                <th>Tên</th>
                <th>Ngày sinh</th>
                @*<th>Ghi chú</th>*@
                <th></th>
            </tr>
        </thead>
        <tbody style="width:auto;">
            @foreach (var item in Model.Data)
            {
                <tr>
                    <td><img src="@item.Photo" width="50px" height="50px" /></td>
                    <td>@item.Email</td>
                    <td>@item.FirstName</td>
                    <td>@item.LastName</td>
                    <td>@item.BirthDate.ToString("d")</td>
                    @* <td>@item.Note</td>*@
                    <td class="text-right">
                        <a href="~/employee/edit/@item.EmployeeID" class="btn btn-xs btn-primary">
                            <i class="fa fa-edit "></i>
                        </a>
                        <a href="~/employee/delete/@item.EmployeeID" class="btn btn-xs btn-danger">
                            <i class="fa fa-remove "></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<!-- /.box-body -->
<div class="box-footer text-center">
    <ul class="pagination">
        @if (Model.PageCount > 1)
        {
            for (int i = 1; i <= Model.PageCount; i++)
            {
                if (i == Model.Page)
                {
                    <li class="active"><a href="#">@i</a></li>
                }
                else
                {
                    <li><a href="javascript:;" onclick="doSearch(@i)">@i</a></li>
                }
            }
        }
    </ul>
</div>
<!-- /.box-footer-->