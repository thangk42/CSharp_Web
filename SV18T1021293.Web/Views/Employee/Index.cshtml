@model SV18T1021293.Web.Models.EmployeePaginationResult
@{
    ViewBag.Title = "Nhân viên";
}


<div class="box box-primary">
    <div class="box-header with-border">
    </div>
    <div class="box-body">
        <form action="#" method="get">
            <div class="input-group">
                <input type="text" name="searchValue" class="form-control" placeholder="Search..." value="@Model.SearchValue">
                <span class="input-group-btn">
                    <button type="submit" id="search-btn" class="btn btn-flat btn-info">
                        <i class="fa fa-search"></i>
                    </button>
                    <a href="~/employee/create" class="btn btn-flat btn-primary" style="margin-left:10px">
                        <i class="fa fa-plus"> Bổ sung</i>
                    </a>
                </span>
            </div>
        </form>

        <p style="margin: 5px">
            Có <strong>@Model.RowCount</strong> nhân viên trong tổng số <strong>@Model.PageCount</strong> trang
        </p>

        <div class="table-responsive">
            <table class="table table-bordered table-hover table-striped" style="table-layout:inherit">
                <thead>
                    <tr class="bg-primary">
                        <th></th>
                        <th>Email</th>
                        <th>Họ</th>
                        <th>Tên</th>
                        <th>Ngày sinh</th>
                        @*<th>Ghi chú</th>*@
                        <th></th>
                    </tr>
                </thead>
                <tbody style="width:auto;">
                    @foreach (var item in Model.Data)
                    {
                        <tr>
                            <td><img src="@item.Photo" width="50px" height="50px" /></td>
                            <td>@item.Email</td>
                            <td>@item.FirstName</td>
                            <td>@item.LastName</td>
                            <td>@item.BirthDate.ToString("d")</td>
                           @* <td>@item.Note</td>*@
                            <td class="text-right">
                                <a href="~/employee/edit/@item.EmployeeID" class="btn btn-xs btn-primary">
                                    <i class="fa fa-edit "></i>
                                </a>
                                <a href="~/employee/delete/@item.EmployeeID" class="btn btn-xs btn-danger">
                                    <i class="fa fa-remove "></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>


    </div>
    <!-- /.box-body -->
    <div class="box-footer text-center">
        <ul class="pagination">
            @for (int i = 1; i <= Model.PageCount; i++)
            {
                if (i == Model.Page)
                {
                    <li class="active"><a href="#">@i</a></li>
                }
                else
                {
                    <li><a href="~/employee?page=@i&&searchValue=@Model.SearchValue">@i</a></li>
                }
            }
        </ul>
    </div>
    <!-- /.box-footer-->
</div>
