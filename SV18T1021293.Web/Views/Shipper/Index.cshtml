@model SV18T1021293.Web.Models.ShipperPaginationResult
@{
    ViewBag.Title = "Người giao hàng";
}

<div class="box box-primary">
    <div class="box-header with-border">
    </div>
    <div class="box-body">
        <form action="~/shipper" method="get">
            <div class="input-group">
                <input type="text" name="searchValue" class="form-control" placeholder="Search..." value="@Model.SearchValue">
                <span class="input-group-btn">
                    <button type="submit" id="search-btn" class="btn btn-flat btn-info">
                        <i class="fa fa-search"></i>
                    </button>
                    <a href="~/shipper/create" class="btn btn-flat btn-primary" style="margin-left:10px">
                        <i class="fa fa-plus"> Bổ sung</i>
                    </a>
                </span>
            </div>
        </form>

        <p style="margin: 5px">
            Có <strong>@Model.RowCount</strong> Người giao hàng trong tổng số <strong>@Model.PageCount</strong> trang
        </p>

        <div class="table-responsive">
            <table class="table table-bordered table-hover table-striped">
                <thead>
                    <tr class="bg-primary">
                        <th>Tên người giao hàng</th>
                        <th>Số điện thoại</th>
                        <th style="width:75px"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Data)
                    {
                        <tr>
                            <td>@item.ShipperName</td>
                            <td>@item.Phone</td>
                            <td class="text-right">
                                <a href="~/shipper/edit/@item.ShipperID" class="btn btn-xs btn-primary">
                                    <i class="fa fa-edit "></i>
                                </a>
                                <a href="~/shipper/delete/@item.ShipperID" class="btn btn-xs btn-danger">
                                    <i class="fa fa-remove "></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>


    </div>
    <!-- /.box-body -->
    <div class="box-footer text-center">
        <ul class="pagination">
            @for (int i = 1; i <= Model.PageCount; i++)
            {
                if (i == Model.Page)
                {
                    <li class="active"><a href="#">@i</a></li>
                }
                else
                {
                    <li><a href="~/shipper?page=@i&&searchValue=@Model.SearchValue">@i</a></li>
                }
            }
        </ul>
    </div>
    <!-- /.box-footer-->
</div>


