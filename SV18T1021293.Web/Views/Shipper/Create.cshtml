@model SV18T1021293.DomainModel.Shipper
@{

}


<div class="box box-primary">
    <div class="box-header with-border">

    </div>

    <div class="box-body">
        <form class="form-horizontal" action="~/shipper/save" method="post">
            <input type="hidden" name="ShipperID" value="@Model.ShipperID" />
            <div class="form-group">
                <label class="control-label col-sm-2">Tên Người giao hàng:</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.ShipperName, new { @class = "form-control" , @autofocus = "autofocus"})
                    @Html.ValidationMessageFor(m => m.ShipperName, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2" >Số điện thoại:</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.Phone, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Phone, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary">
                        <i class="fa fa-save"></i> Lưu dữ liệu
                    </button>
                    <a href="~/shipper" class="btn btn-default">
                        <i class="fa fa-ban"> Quay lại</i>
                    </a>
                </div>
            </div>
        </form>
    </div>
    <div class="footer">

    </div>
</div>



