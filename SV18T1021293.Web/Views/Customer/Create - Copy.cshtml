@model SV18T1021293.DomainModel.Customer
@{

}

<div class="box box-primary">
    <div class="box-header with-border">

    </div>

    <div class="box-body">
        <form class="form-horizontal" action="~/customer/save" method="post">

            <input type="hidden" name="CustomerID" value="@Model.CustomerID" />
            <div class="form-group">
                <label class="control-label col-sm-2" for="email">Tên khách hàng:</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="CustomerName" name="CustomerName" placeholder="" autofocus value="@Model.CustomerName">
                    <p class="text-danger">@Html.ValidationMessage("CustomerName")</p>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2" for="email">Tên giao dịch:</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="ContactName" name="ContactName" placeholder="" value="@Model.ContactName">
                    <p class="text-danger">@Html.ValidationMessage("ContactName")</p>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2" for="email">Địa chỉ:</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="Address" name="Address" placeholder="" value="@Model.Address">
                    <p class="text-danger">@Html.ValidationMessage("Address")</p>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2" for="email">Quốc gia:</label>
                <div class="col-sm-10">
                    <select class="form-control" id="Country" name="Country">
                        @foreach (var country in SV18T1021293.BusinessLayer.CommonDataService.ListOfCountries())
                        {
                            if (country.ContryName == Model.Country)
                            {
                                <option value="@country.ContryName" selected>@country.ContryName</option>
                            }
                            else
                            {
                                <option value="@country.ContryName">@country.ContryName</option>
                            }
                        }
                    </select>
                    <p class="text-danger">@Html.ValidationMessage("Country")</p>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2" for="email">Thành phố:</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="City" name="City" placeholder="" value="@Model.City">
                    <p class="text-danger">@Html.ValidationMessage("City")</p>
                </div>

            </div>
            <div class="form-group">
                <label class="control-label col-sm-2" for="email">Mã bưu chính:</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="PostalCode" name="PostalCode" placeholder="" value="@Model.PostalCode">
                    <p class="text-danger">@Html.ValidationMessage("PostalCode")</p>
                </div>

            </div>

            @*  <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        @Html.ValidationSummary()
                    </div>
                </div>*@
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary">
                        <i class="fa fa-save"></i> Lưu dữ liệu
                    </button>
                    <a href="~/customer" class="btn btn-default">
                        <i class="fa fa-ban"> Quay lại</i>
                    </a>
                </div>
            </div>
        </form>
    </div>
    <div class="footer">

    </div>
</div>