@model SV18T1021293.DomainModel.Category
@{

}

<div class="box box-primary">
    <div class="box-header with-border">

    </div>

    <div class="box-body">
        <form class="form-horizontal" action="~/category/save" method="post">
            <input type="hidden" name="CategoryID" value="@Model.CategoryID" />
            <div class="form-group">
                <label class="control-label col-sm-2" for="email">Tên loại hàng:</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="CategoryName" name="CategoryName" placeholder="" autofocus value="@Model.CategoryName">
                    <p class="text-danger">@Html.ValidationMessage("CategoryName")</p>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2" for="email">Mô tả:</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="Description" name="Description" placeholder="" value="@Model.Description">
                    <p class="text-danger">@Html.ValidationMessage("Description")</p>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary">
                        <i class="fa fa-save"></i> Lưu dữ liệu
                    </button>
                    <a href="~/category" class="btn btn-default">
                        <i class="fa fa-ban"> Quay lại</i>
                    </a>
                </div>
            </div>
        </form>
    </div>
    <div class="footer">

    </div>
</div>

