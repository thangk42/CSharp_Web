@model SV18T1021293.Web.Models.SupplierPaginationResult
@{
    Layout = null;
}

<p style="margin: 5px">
    Có <strong>@Model.RowCount</strong> Nhà cung cấp trong tổng số <strong>@Model.PageCount</strong> trang
</p>

<div class="table-responsive">
    <table class="table table-bordered table-hover table-striped">
        <thead>
            <tr class="bg-primary">
                <th>Tên Nhà cung cấp</th>
                <th>Tên giao dịch</th>
                <th>Địa chỉ</th>
                <th>Quốc gia</th>
                <th>Thành phố</th>
                <th>Số điện thoại</th>
                <th>Mã bưu chính</th>
                <th style="width:75px"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Data)
            {
                <tr>
                    <td>@item.SupplierName</td>
                    <td>@item.ContactName</td>
                    <td>@item.Address</td>
                    <td>@item.Country</td>
                    <td>@item.City</td>
                    <td>@item.Phone</td>
                    <td>@item.PostalCode</td>
                    <td class="text-right">
                        <a href="~/supplier/edit/@item.SupplierID" class="btn btn-xs btn-primary">
                            <i class="fa fa-edit "></i>
                        </a>
                        <a href="~/supplier/delete/@item.SupplierID" class="btn btn-xs btn-danger">
                            <i class="fa fa-remove "></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<!-- /.box-body -->
<div class="box-footer text-center">
    <ul class="pagination">
        @for (int i = 1; i <= Model.PageCount; i++)
        {
            if (i == Model.Page)
            {
                <li class="active"><a href="#">@i</a></li>
            }
            else
            {
                <li><a href="javascript:;" onclick="doSearch(@i)">@i</a></li>
            }
        }
    </ul>
</div>
<!-- /.box-footer-->